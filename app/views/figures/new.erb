<h2>Create New Figure</h2>

<form method="post" action="/figures">
  <label>Name <input type="text" id="figure_name" name="figure[name]"></label>
  <br>
  <h3>Titles</h3>
  <% @titles.each do |title| %>
    <label><%= title.name %> <input type="checkbox" id="title_<%= title.id %>"
                                    name="figure[title_ids][]"
                                    value="<%= title.id %>"></label><br>
  <% end %>
  <h3>Create New Title: </h3>
  <input type="text" name="title[name]" id="new_title">
  <br>
  <h3>Landmarks</h3>
  <% @landmarks.each do |landmark| %>
    <label><%= landmark.name %> <input type="checkbox"
                                       id="landmark_<%= landmark.id %>"
                                       name="figure[landmark_ids][]"
                                       value="<%= landmark.id %>"></label><br>
  <% end %>
  <h3>Create Landmarks: </h3>
  <label>Name:<input type="text" name="landmark[name]" id="new_landmark"></label>
  <label>Year:<input type="text" name="landmark[year_completed]"></label>
  <br>
  <input type="submit" name="Create New Figure" value="Create New Figure">
</form>
<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
