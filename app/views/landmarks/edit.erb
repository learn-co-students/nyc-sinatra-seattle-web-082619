<h2>Edit Historical Landmark</h2>

<form method="post" action="/landmarks/<%=@landmark.id%>">
 
  <label>Name:<input value="<%= @landmark.name %>" type="text" name="name" id="new_landmark"></label>
  <label>Year:<input value="<%= @landmark.year_completed %>" type="text" name="year_completed"></label>

  <h3>Figures</h3>
  <% @figures.each do |figure| %>
    <label><%= figure.name %> 
      <input type="radio" 
             id="figure_<%= figure.id %>" 
             name="figure_id" 
             value="<%= figure.id %>" <%= "checked" if figure.landmarks.include?(@landmark) %>>
    </label><br>
  <% end %>

  <h3>Create Figure: </h3>
  <label>Name:<input type="text" name="figure[name]" id="new_figure"></label>
  <br>
  
  <input type="hidden" name="_method" value="patch">
  <input type="submit">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
